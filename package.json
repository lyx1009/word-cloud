
{
  "name": "chinese-word-cloud",
  "version": "1.0.0",
  "description": "Professional Chinese Word Cloud Generator",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "ios:setup": "npm install @capacitor/core @capacitor/cli @capacitor/ios && npx cap init",
    "ios:add": "npx cap add ios",
    "ios:sync": "npx cap sync ios",
    "ios:open": "npx cap open ios"
  },
  "author": "CloudyEngineer",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@capacitor/cli": "^5.0.0"
  },
  "dependencies": {
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0"
  },
  "build": {
    "appId": "com.wordcloud.app",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
